
<div class="form-group row">
    <label class="col-sm-2 col-form-label" for="name">Name</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{record.name}}" required>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="date">Date</label>
    <div class="col-sm-10">
      <input class="form-control" type="date" name="date" id="date"  value={{#if record.date}}"{{record.date}}"{{else}} "{{defaultDate}}" {{/if}}>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="categoryId">類別</label>
    <div class="col-sm-10">
    <select name="categoryId" id="categoryId">
        {{#each categories}}
        <option value={{this._id}}>{{this.name}}</option>
        {{/each}}
    </select>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="amount">Amount</label>
    <div class="col-sm-10">
      <input class="form-control" type="number" name="amount" id="amount" placeholder="Enter amount" value="{{record.amount}}" required>
    </div>
  </div>  
  